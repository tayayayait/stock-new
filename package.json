{
  "name": "stockwise",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "server"
  ],
  "scripts": {
    "dev": "vite",
    "dev:server": "cd server && npx tsx watch src/index.ts",
    "dev:web": "vite -- --host",
    "dev:all": "npm-run-all --parallel dev:server dev:web",
    "build": "vite build",
    "preview": "vite preview",
    "prisma:seed": "tsx server/prisma/seed.ts",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "lint": "tsc --noEmit",
    "changeset": "changeset",
    "lint:commits": "commitlint --from=HEAD~1 --to=HEAD"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-virtual": "^3.13.12",
    "decimal.js": "^10.6.0",
    "echarts": "^5.5.0",
    "framer-motion": "^12.0.6",
    "jspdf": "^3.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "recharts": "^2.15.3",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "5.0.3",
    "jsdom": "^27.0.0",
    "msw": "^2.11.4",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "6.3.6",
    "vitest": "^3.2.4"
  }
}
